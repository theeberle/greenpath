<%# Container showing search results of challenges %>
<div class="results-container">
  <h3>Showing results for "<%= params[:query] %>"</h3>
</div>

<%# Grid where challenges of search query are displayed. Shows challenge cards, name, details, and carbon saving amount %>
<div class="challenges-grid-search">

  <% @challenges.each do |challenge| %>

    <div class="challenge-card">
      <%= link_to '', challenge_path(challenge), class: 'card-link'  %>
      <img class="challenge-image" src="<%= cl_image_path(challenge.picture.key) %>" alt="Challenge-Image">
      <div class="challenge-details">
        <h2 class="challenge-title"><%= challenge.name %></h2>
        <p class="carbon-footprint"><%= challenge.saving_carbonamount.to_i %> kg CO2e</p>
      </div>
    </div>
  <% end %>

</div>
